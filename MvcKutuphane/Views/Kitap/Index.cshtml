@using MvcKutuphane.Models.Entity
@model List<TBLKITAP>
@{
   ViewBag.Title = "Index";
   Layout = "~/Views/Shared/Layout.cshtml";
}

<h2>Kitap Sayfası</h2>

@using (Html.BeginForm("Index", "Kitap", FormMethod.Get))
{
   <div style="margin-bottom:15px; margin-top:15px;">
      <b>Aranacak Kitap Adını Giriniz: &nbsp</b>
      @Html.TextBox("p")
      <input type="submit" value="Ara" />
   </div>
}


<table class="table table-bordered">
   <tr>
      <th>ID</th>
      <th>Kitap Adı</th>
      <th>Kitap Yazarı</th>
      <th>Kategorisi</th>
      <th>Basım Yılı</th>
      <th>Yayınevi</th>
      <th>Sayfa</th>
      <th>Durum</th>
      <th>Sil</th>
      <th>Güncelle</th>
   </tr>

   @foreach (var ktp in Model)
   {
      <tr>
         <td>@ktp.ID</td>
         <td>@ktp.AD</td>
         <td>@ktp.TBLYAZAR.AD &nbsp  @ktp.TBLYAZAR.SOYAD</td>
         <td>@ktp.TBLKATEGORI.AD</td>
         <td>@ktp.BASIMYIL</td>
         <td>@ktp.YAYINEVİ</td>
         <td>@ktp.SAYFA</td>
         <td>@ktp.DURUM</td>
         <td><a href="/Kitap/KitapSil/@ktp.ID" class="btn btn-danger" style="width:60px;">Sil</a></td>
         <td><a href="/Kitap/KitapGetir/@ktp.ID" class="btn btn-success">Güncelle</a></td>
      </tr>
   }
</table>
<a href="/Kitap/KitapEkle" class="btn btn-primary">Yeni Kitap Ekle</a>
