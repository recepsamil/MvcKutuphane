@using MvcKutuphane.Models.Entity
@model List<TBLADMIN>
@{
   ViewBag.Title = "Index";
   Layout = "~/Views/Shared/Layout.cshtml";
}



<!-- Bootstrap JS and dependencies (jQuery and Popper.js) -->
<script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
<!-- Popper.js -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.1/umd/popper.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

<br />
<table class="table table-bordered">
   <tr>
      <th>ID</th>
      <th>Kullanıcı</th>
      <th>Yetki</th>
      <th>Sil</th>
      <th>Düzenle</th>
   </tr>
   @foreach (var item in Model)
   {
      <tr>
         <td>@item.ID</td>
         <td>@item.Kullanici</td>
         <td>@item.Yetki</td>
         <td class="project-actions">
            <a class="btn btn-info btn-sm" href="/Ayarlar/AdminGuncelle/@item.ID">
               <i class="fas fa-pencil-alt"></i>
               DUZENLE
            </a>
         </td>
         <td>
            <a class="btn btn-danger btn-sm" href="/Ayarlar/AdminSil/@item.ID">
               <i class="fas fa-trash"></i>
               Sil
            </a>
         </td>
      </tr>
   }
</table>
<br />

<!-- Yeni Admin Ekle Butonu -->
<a class="btn btn-primary" href="#" data-toggle="modal" data-target="#Modal1">Yeni Admin Ekle</a>



<div class="modal" id="Modal1" style="background-color:white;">
   <div class="modal-dialog">
      <div class="modal-content">
         <div class="modal-header">
            <h2 class="modal-title">Admin Ekleme Paneli</h2>
         </div>
         <form method="post" action="/Ayarlar/YeniAdmin/">
            <div class="modal-body">
               <label>Kullanıcı Adı</label>
               <input type="text" name="Kullanici" class="form-control" />
               <br />
               <label>Şifre</label>
               <input type="text" name="Sifre" class="form-control" />
               <br />
               <label>Yetki </label>
               <input type="text" name="Yetki" class="form-control" />
               <br />
               <button class="btn btn-warning">Kaydet</button>
            </div>

         </form>
      </div>
   </div>
</div>
