@using MvcKutuphane.Models.Entity
@model List<TBLHAREKET>
@{
   ViewBag.Title = "Index";
   Layout = "~/Views/Shared/Layout.cshtml";
}

<h2>İadesi Alınan Kitap Listesi</h2>

<table class="table table-bordered">
   <tr>
      <th>İşlem ID</th>
      <th>Kitap Adı</th>
      <th>Üye</th>
      <th>Personel</th>
      <th>Alış Tarihi</th>
      <th>Üyenin İade Tarih</th>
      <th>Detaylar</th>
   </tr>

   @foreach (var o in Model)
   {
      <tr>
         <td>@o.ID</td>
         <td>@o.TBLKITAP.AD</td>
         <td>@o.TBLUYELER.AD&nbsp @o.TBLUYELER.SOYAD</td>
         <td>@o.PERSONEL</td>
         <td>@Convert.ToDateTime(o.ALISTARIH).ToString("dd/MM/yyyy")</td>
         <td>@Convert.ToDateTime(o.UYEGETIRTARIH).ToString("dd/MM/yyyy")</td>
         <td><a href="/Odunc/OduncIade/@o.ID" class="btn btn-default" style="background-color:#797979; color:white;">Detaylar</a></td>

      </tr>
   }
</table>

