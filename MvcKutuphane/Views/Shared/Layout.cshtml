
@{
   Layout = null;
}

<!DOCTYPE html>
<html>
<head>
   <meta name="viewport" content="width=device-width, initial-scale=1">
   <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
   <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/css/bootstrap.min.css">
  
   <style>
      body {
         font-family: "Lato", sans-serif;
      }

      .sidebar {
         height: 100%;
         width: 240px;
         position: fixed;
         z-index: 1;
         top: 0;
         left: 0;
         background-color: #111;
         overflow-x: hidden;
         padding-top: 16px;
      }

         .sidebar a {
            padding: 8px 8px 10px 18px;
            text-decoration: none;
            font-size: 20px;
            color: #ffffff;
            display: block;
         }

            .sidebar a:hover {
               color: #0094ff;
            }

      .main {
         margin-left: 250px; /* Same as the width of the sidenav */
         padding: 0px 10px;
      }

      @@media screen and (max-height: 450px) {
         .sidebar {
            padding-top: 15px;
         }

            .sidebar a {
               font-size: 18px;
            }
      }
   </style>
</head>
<body>

   <div class="sidebar">
      <a href="/Istatistik/Index/" style="text-decoration:none;"><i class="glyphicon glyphicon-home"></i> &nbsp; Ana Sayfa</a>
      <a href="/Kategori/Index/" style="text-decoration:none;"><i class="glyphicon glyphicon-list"></i> &nbsp; Kategoriler</a>
      <a href="/Kitap/Index/" style="text-decoration:none;"><i class="glyphicon glyphicon-book"></i> &nbsp; Kitaplar</a>
      <a href="/Yazar/Index/" style="text-decoration:none;"><i class="glyphicon glyphicon-pencil"></i> &nbsp; Yazarlar</a>
      <a href="/Uye/Index/" style="text-decoration:none;"><i class="glyphicon glyphicon-user"></i> &nbsp; Üyeler</a>
      <a href="/Personel/Index/" style="text-decoration:none;"><i class="glyphicon glyphicon-tower"></i> &nbsp; Personeller</a>
      @if (User.IsInRole("A"))
      {
      <a href="/Odunc/OduncVer/" style="text-decoration:none;"><i class="glyphicon glyphicon-circle-arrow-right"></i> &nbsp; Ödünç Kitap Ver</a>
      <a href="/Odunc/Index/" style="text-decoration:none;"><i class="glyphicon glyphicon-circle-arrow-left"></i> &nbsp; Ödünç Kitap Al</a>
      }
      <a href="/Istatistik/Index/" style="text-decoration:none;"><i class="glyphicon glyphicon-sort"></i> &nbsp; İstatistikler</a>
      <a href="/Duyuru/Index/" style="text-decoration:none;"><i class="glyphicon glyphicon-earphone"></i> &nbsp; Duyurular</a>
      <a href="/Islem/Index/" style="text-decoration:none;"><i class="glyphicon glyphicon-dashboard"></i> &nbsp; İşlemler</a>
      <a href="/Istatistik/Hava/" style="text-decoration:none;"><i class="glyphicon glyphicon-cloud"></i> &nbsp; Hava Raporu</a>
      <a href="/Istatistik/HavaKart/" style="text-decoration:none;"><i class="glyphicon glyphicon-plus"></i> &nbsp; Hava Kartları</a>
      <a href="/Istatistik/Galeri/" style="text-decoration:none;"><i class="glyphicon glyphicon-picture"></i> &nbsp; Galeri</a>
      <a href="/Istatistik/LinqKart/" style="text-decoration:none;"><i class="glyphicon glyphicon-bookmark"></i> &nbsp; Linq Kartlar</a>
      <a href="/Vitrin/Index/" style="text-decoration:none;"><i class="glyphicon glyphicon-gift"></i> &nbsp; Vitrin</a>
      <a href="/Grafik/Index/" style="text-decoration:none;"><i class="glyphicon glyphicon-console"></i> &nbsp; Grafikler</a>
      <a href="/Ayarlar/Index" style="text-decoration:none;"><i class="glyphicon glyphicon-cog"></i> &nbsp; Ayarlar</a>
      <a href="/AdminLogin/LogOut/" style="text-decoration:none;"><i class="glyphicon glyphicon-remove-sign"></i> &nbsp; Çıkış</a>
   </div>

   <div class="main">
      @RenderBody()
   </div>

</body>
</html>
