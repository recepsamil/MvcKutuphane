@using MvcKutuphane.Models.Entity;
@model List<TBLDUYURULAR>
@{
   ViewBag.Title = "Duyurular";
   Layout = "~/Views/Shared/LayoutPanelim.cshtml";
}

<h2>Duyurular</h2>

<table class="table table-bordered">
   <tr>
      <th>KATEGORİ</th>
      <th>TARİH</th>
      <th>İÇERİK</th>
   </tr>

   @foreach (var d in Model)
   {
      <tr>  
         <td>@d.KATEGORİ</td>
         <td>@Convert.ToDateTime(d.TARIH).ToString("dd/MM/yyyy")</td>
         <td>@d.ICERIK</td>


      </tr>
   }
</table>
